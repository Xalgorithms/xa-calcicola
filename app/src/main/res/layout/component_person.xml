<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="@dimen/lichen_card_radius"
    card_view:cardElevation="@dimen/lichen_card_elevation">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/lichen_component_margin_vertical"
        android:layout_marginBottom="@dimen/lichen_component_margin_vertical"
        android:layout_marginStart="@dimen/lichen_component_margin_horizontal"
        android:layout_marginLeft="@dimen/lichen_component_margin_horizontal"
        android:layout_marginEnd="@dimen/lichen_component_margin_horizontal"
        android:layout_marginRight="@dimen/lichen_component_margin_horizontal">
        <TextView
            android:id="@+id/label_person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            style="@style/lichen_card_title"
            tools:text="Bob Smith (Smith and Sons)"/>
        <TextView
            android:id="@+id/label_person_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/label_person_name"
            style="@style/lichen_label"
            tools:text="Ottawa, ON"/>
        <TextView
            android:id="@+id/label_person_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_person_name"
            android:layout_toRightOf="@+id/label_person_location"
            android:layout_toEndOf="@+id/label_person_location"
            android:layout_marginLeft="4sp"
            android:layout_marginStart="4sp"
            style="@style/lichen_label"
            tools:text="CA"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>