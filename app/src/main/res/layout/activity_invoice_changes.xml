<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/lichen_activity_padding_top"
    android:paddingLeft="@dimen/lichen_activity_padding_start"
    android:paddingStart="@dimen/lichen_activity_padding_start"
    android:paddingRight="@dimen/lichen_activity_padding_end"
    android:paddingEnd="@dimen/lichen_activity_padding_end"
    android:orientation="vertical">
    <!-- invoice summary -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </RelativeLayout>

    <!-- changes -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/label_invoice_changes_changes"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/collection_invoice_changes_changes"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>
