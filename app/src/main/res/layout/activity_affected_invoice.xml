<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/activity"
    android:orientation="vertical">

    <include layout="@layout/component_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:orientation="vertical">

        <include
            android:id="@+id/component_lichenize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/component_lichenize" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="14sp">
            <include
                android:id="@+id/component_person_customer"
                layout="@layout/component_person" />
            <include
                android:id="@+id/component_person_supplier"
                layout="@layout/component_person" />
        </LinearLayout>
        <include
            android:id="@+id/component_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/component_summary" />
        <include
            android:id="@+id/component_changes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            layout="@layout/component_changes" />
        <include
            android:id="@+id/component_changes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/component_invoice_items" />
    </LinearLayout>
</LinearLayout>

