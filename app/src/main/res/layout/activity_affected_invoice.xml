<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/component_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/lichen_activity_padding_top"
        android:paddingLeft="@dimen/lichen_activity_padding_start"
        android:paddingStart="@dimen/lichen_activity_padding_start"
        android:paddingRight="@dimen/lichen_activity_padding_end"
        android:paddingEnd="@dimen/lichen_activity_padding_end"
        android:orientation="vertical"
        android:background="@color/lichen_invoice_background">

        <include
            android:id="@+id/component_person_customer"
            layout="@layout/component_person" />
        <include
            android:id="@+id/component_person_supplier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6sp"
            layout="@layout/component_person" />
        <include
            android:id="@+id/component_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/lichen_component_inter_spacing"
            layout="@layout/component_summary" />
        <include
            android:id="@+id/component_lichenize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/lichen_component_inter_spacing"
            layout="@layout/component_lichenize" />
        <include
            android:id="@+id/component_changes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/lichen_component_inter_spacing"
            android:visibility="gone"
            layout="@layout/component_changes" />
        <include
            android:id="@+id/component_changes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/lichen_component_inter_spacing"
            layout="@layout/component_invoice_items" />
    </LinearLayout>
</LinearLayout>

