<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="6dp"
    android:paddingBottom="6dp">
    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/view_transaction_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="2dp">
        <RelativeLayout
            android:id="@+id/view_transaction_target"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:clickable="true"
            android:background="?android:selectableItemBackground">
            <TextView
                android:id="@+id/label_transaction_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:maxLines="1"
                android:scrollHorizontally="true"
                tools:text="foo"/>
            <TextView
                android:id="@+id/label_transaction_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/label_transaction_name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:gravity="end"
                tools:text="open"/>
            <TextView
                android:id="@+id/label_transaction_new_invoices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/label_transaction_name"
                tools:text="1 new invoice"/>
            <TextView
                android:id="@+id/label_transaction_invoices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/label_transaction_new_invoices"
                tools:text="3 invoices"/>
            <TextView
                android:id="@+id/label_transaction_rules"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/label_transaction_status"
                android:layout_alignParentRight="true"
                android:gravity="end"
                tools:text="4 rules" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>