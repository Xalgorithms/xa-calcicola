<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!-- previous -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:background="#ffdb5800"
        android:layout_marginTop="8sp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/label_invoice_changes_previous_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:background="@android:color/transparent"
                tools:text="Something nice"/>
            <TextView
                android:id="@+id/label_invoice_changes_previous_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffe0e0e0"
                android:textSize="12sp"
                android:maxLines="3"
                android:background="@android:color/transparent"
                tools:text="Very long description of an item that should wrap into multiple lines so that I can see what THAT looks like."/>
        </LinearLayout>
        <TextView
            android:id="@+id/label_invoice_changes_previous_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:background="@android:color/transparent"
            tools:text="$10000 (USD)"/>
    </LinearLayout>

    <!-- latest -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:orientation="horizontal"
        android:background="#ff007348">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/label_invoice_changes_latest_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:background="@android:color/transparent"
                tools:text="Something nice"/>
            <TextView
                android:id="@+id/label_invoice_changes_latest_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:textSize="12sp"
                android:textColor="#ffe0e0e0"
                android:maxLines="3"
                tools:text="Very long description of an item that should wrap into multiple lines so that I can see what THAT looks like."/>
        </LinearLayout>
        <TextView
            android:id="@+id/label_invoice_changes_latest_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:background="@android:color/transparent"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            tools:text="$10000 (USD)"/>
    </LinearLayout>
</LinearLayout>
