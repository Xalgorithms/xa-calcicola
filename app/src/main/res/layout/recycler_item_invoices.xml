<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="6dp"
    android:paddingBottom="6dp">
    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/view_transaction_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="4dp">
        <RelativeLayout
            android:id="@+id/container_transaction_invoices_target"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:clickable="true"
            android:background="?android:selectableItemBackground">
            <TextView
                android:id="@+id/label_affected_invoice_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:textSize="18sp"
                tools:text="TOSL108"/>
            <TextView
                android:id="@+id/label_invoice_customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/label_affected_invoice_id"
                tools:text="Robert Smith"/>
            <TextView
                android:id="@+id/label_invoice_customer_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/label_invoice_customer_name"
                tools:text="Widgets of the World Inc."/>
            <TextView
                android:id="@+id/label_invoice_issued"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/label_affected_invoice_id"
                android:layout_toEndOf="@+id/label_affected_invoice_id"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:gravity="end"
                android:textSize="18sp"
                tools:text="January 17, 2016" />
            <TextView
                android:id="@+id/label_invoice_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/label_invoice_due"
                android:layout_toRightOf="@+id/label_invoice_customer_company"
                android:layout_toEndOf="@+id/label_invoice_customer_company"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/label_invoice_customer_company"
                android:gravity="bottom|end"
                android:textSize="26sp"
                tools:text="$2599.87" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>